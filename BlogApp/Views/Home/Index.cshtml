@model IEnumerable<BlogApp.Models.BlogModel>
@{
    ViewData["Title"] = "Home Page";
}

@*<div class="owl-carousel owl-theme">
    <div class="item">
        <img src="~/images/bg.jpg"/>
    </div>
</div>*@
<div class="row">
    <div class="col">
        <div class="owl-carousel owl-theme">
            <div class="item">
                <img src="~/images/owl1.jpg" class="img-fluid" />
            </div>
            <div class="item">
                <img src="~/images/bg.jpg" class="img-fluid" />
            </div>
            <div class="item">
                <img src="~/images/owl2.jpg" class="img-fluid"/>
            </div>
            <div class="item">
                <img src="~/images/analiz1.jpg" class="img-fluid"/>
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-md-8 col-sm-12">
        <h2 class="fontbig">Blog Listesi</h2>
        @if (Model.Count() == 0)
        {
            <div class="alert alert-warning">
                Kayıt Bulunamadı.
            </div>

        }

        @foreach (var item in Model)
        {

            <div class="card blogs img-fluid">
                <img src="~/Image/@item.Resim" asp-append-version="true" />
                <div class="card-body text-capitalize">
                    <h5 class="card-title">@item.Baslik</h5>
                    <p class="card-text mb-2">@item.Aciklama</p>
                    <a type="button" href="~/Blog/Details/@item.Id" class="btn btn-primary">Daha Fazla...</a>
                    @if (@item.CategoryId % 2 == 0)
                    {
                        <span class="badge bg-warning text-dark float-end text-capitalize categorylistbadge">@item.KategoriAdi</span>
                    }
                    else
                    {
                        <span class="badge bg-info text-dark float-end text-capitalize categorylistbadge">@item.KategoriAdi</span>
                    }
                    <p class="mt-3 ps-2 py-1 fw-lighter border border-2">
                        <i class="bi bi-clock"></i>
                        @item.EklenmeTarihi
                    </p>
                </div>
            </div>

        }
    </div>
    <div class="col-md-4 col-sm-12">
        <h2 class="fontbig text-center">Haberler</h2>
        @await Component.InvokeAsync("IndexNews")
        @*@await Html.PartialAsync("_Search")*@
    </div>

</div>
