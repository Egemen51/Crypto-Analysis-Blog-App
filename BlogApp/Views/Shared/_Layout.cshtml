<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogApp</title>
    <link href="~/owlcarousel/dist/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/owlcarousel/dist/assets/owl.theme.default.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" integrity="sha512-xnP2tOaCJnzp2d2IqKFcxuOiVCbuessxM6wuiolT9eeEJCyy0Vhcwa4zQvdrZNVqlqaxXhHqsSV1Ww7T2jSCUQ==" crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/c2d763bf5f.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/SlickNav/dist/slicknav.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <span><i class="bi bi-currency-bitcoin me-3"></i></span>
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">BlogApp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1" id="menu">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="https://www.binance.com/tr" target="_blank">Coin Satın al</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>
                        @await Component.InvokeAsync("CategoryList")
                        <li class="nav-item">
                            <button class="btn btn-outline-warning" type="submit" id="navbarbutton"><i class="bi bi-search"></i></button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <form asp-controller="Blog" asp-action="List" method="get" class="search-box d-flex justify-content-center align-items-center">
                <input name="q" class="form-control w-75" id="searchinput">
                <span>
                    <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                </span>
            </form>
        </div>
    </div>

    <div class="container body">
        @RenderBody()
    </div>


    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/owlcarousel/dist/owl.carousel.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/SlickNav/dist/jquery.slicknav.js"></script>
    <script>
        $(function () {
            $('#menu').slicknav();
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
