@model BlogApp.Models.Blog

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Blog Sil</h1>

<h3>Bunu silmek istediğinizden emin misiniz ?</h3>
<div>
    <h4>Blog</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Baslik)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Baslik)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aciklama)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aciklama)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resim)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resim)
        </dd>
        <dt class="col-sm-2">
            Uploaded Image
        </dt>
        <dd class="col-sm-10">
            <img src="~/Image/@Model.Resim" asp-append-version="true" width="250px" height="250px"/>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EklenmeTarihi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EklenmeTarihi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Onay)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Onay)
            {

                <span class="badge bg-success">Onaylı</span>

            }
            else
            {
                <span class="badge bg-warning">Onay Bekliyor</span>

            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Anasayfa)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Anasayfa)
            {

                <span class="badge bg-success">Onaylı</span>

            }
            else
            {
                <span class="badge bg-warning">Onay Bekliyor</span>

            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.KategoriAdi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.KategoriAdi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-light btn-sm" asp-action="Index">Listeye geri dön</a>
    </form>
</div>
